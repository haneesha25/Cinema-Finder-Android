<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upduserprofile"
        android:text="My Profile"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:gravity="center"/>
    <!--    <ImageView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@+id/userprofile"-->
    <!--        android:id="@+id/userimg"-->
    <!--        android:layout_margin="20dp"-->
    <!--        android:src="@drawable/user"/>-->

    <LinearLayout
        android:id="@+id/updname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upduserprofile"
        android:layout_marginTop="2dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/updnametag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Name: "
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/updateusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updname"
        android:id="@+id/updmobilenumber"
        android:layout_marginTop="2dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/updmobilenumbertag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Mobile No: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/updateusermobilenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/updemail"
        android:layout_below="@+id/updmobilenumber"
        android:layout_marginTop="2dp"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/updemailtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Email Id: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/updateuseremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>


    <Button
        android:id="@+id/updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_below="@+id/updemail"
        android:textSize="20sp"
        android:background="@drawable/buttonbg"
        android:color="@color/btn_pink"
        android:text="Update Profile"
        android:textAlignment="center"
        android:textColor="#fff" />

</RelativeLayout>