<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/selectseatslayout"
    tools:context=".SelectSeats">
    <include
        layout="@layout/appbar2"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/displaytheatername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:hint="Theater Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/displaytheateraddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:hint="Theater Address"
        android:textAlignment="center"
        android:textSize="0sp" />
            <TextView
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:hint="Theater Address"
                android:textAlignment="center"
                android:textSize="0sp" />
    <TextView
        android:id="@+id/displaymoviename"
        android:layout_width="match_parent"
        android:hint="Movie NAme"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:id="@+id/setdate"
        android:hint="Select Date"/>

        </LinearLayout>

    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="2sp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/signminus"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:text="-"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@drawable/buttonbg"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:id="@+id/noofseates"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/signplus"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:text="+"/>
    </LinearLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="2sp"
            android:layout_margin="50dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/noofprice"
                android:textAlignment="center"
                android:hint="Total Price"/>
        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2sp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/timebtn1"
                android:textSize="15sp"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"
                android:text="3:00 PM"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/timebtn2"
                android:textSize="15sp"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"
                android:text="6:00 PM"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/timebtn3"
                android:textSize="15sp"
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"
                android:text="9:00 PM"/>
        </LinearLayout>
    </ScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2sp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:id="@+id/payment"
                android:textSize="20sp"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:text="Proceed To Payment"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>