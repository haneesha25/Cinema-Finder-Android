<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bookingbackground"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/bookingorderid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:hint="Order ID"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/booktheatername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="Theater Name"
        android:textStyle="bold"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/bookmoviename"
        android:layout_width="match_parent"
        android:hint="Movie Name"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:id="@+id/bookingdate"
            android:textStyle="bold"
            android:hint="Select Date"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/booktimetime"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="3:00 PM"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@drawable/buttonbg"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:id="@+id/bookingtotalseats"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bookingtotalprice"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:hint="Total Price"/>

</LinearLayout>